            <li class="social-icon" id="linkedin">
                <a href="https://www.linkedin.com/in/mattaunger"><img src="{{asset "/social-icons/linkedin.svg"}}" width="64px" height="64px" /></a>
            </li>
            <li class="social-icon" id="pinterest">
                <a href="https://uk.pinterest.com/MattAunger/"><img src="{{asset "/social-icons/pinterest.svg"}}" width="64px" height="64px" /></a>
            </li>
            <li class="social-icon" id="instagram">
                <a href="https://www.instagram.com/mattmadelife/"><img src="{{asset "/social-icons/instagram.svg"}}" width="64px" height="64px" /></a>
